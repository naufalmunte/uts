<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:background="#ffD700"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/txtwelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="Welcome"
            android:paddingLeft="10dp"
            android:textAlignment="viewStart"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtwel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Selamat datang"
            android:textAlignment="viewStart"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email or Mobile Number"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="patient@self.com"
            android:inputType="textEmailAddress"
            android:padding="8sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:id="@+id/txtpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="minimal 8 kata"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="8sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot your password?"
            android:textAlignment="textEnd"
            android:textColor="#FC6A03"
            android:padding="8sp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:backgroundTint="#FC6A03"
            android:text="Log in"
            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
           >

            <!-- Text to indicate sign-up options -->
            <TextView
                android:id="@+id/tv_signup_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or sign up with"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"/>

            <!-- Sign-Up Icons in a horizontal row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="1sp">

                <!-- Google Sign-In Icon -->
                <ImageView
                    android:id="@+id/iv_google_sign_in"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/google"
                    android:contentDescription="Google Sign-In"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"/>

                <!-- Facebook Sign-In Icon -->
                <ImageView
                    android:id="@+id/iv_facebook_sign_in"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/fb"
                    android:contentDescription="Facebook Sign-In"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"/>

                <!-- Fingerprint Sign-In Icon -->
                <ImageView
                    android:id="@+id/iv_fingerprint_sign_in"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/fingerprint"
                    android:contentDescription="Fingerprint Sign-In"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Dont have account?"
                    android:padding="6sp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign up"
                    android:textColor="#FC6A03"
                    android:padding="6sp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
